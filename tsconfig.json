{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    // ✅ JavaScript support
    "allowJs": true,
    "checkJs": false,

    // ✅ Minimal type checking
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,

    // ✅ Compatibility
    "esModuleInterop": true,

    // ✅ Next.js plugin support
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ✅ Path aliases
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
